<%- include('../common/header.ejs') %>

    <!-- Main Content -->
    <div class="main-content">
        <section class="section">
            <div class="section-body">
                <div class="row">
                    <div class="col-12 col-md-12 col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="panel-title">Add Post</h4>
                                <div class="ml-auto">
                                    <a href="/<%- role %>/gallery_list" class="btn btn-primary "><i
                                            class="fa fa-list"></i>
                                        list</a>
                                </div>
                            </div>

                            <div class="card-body">

                                <form class="upload_data" action="/<%- role %>/save_gallery" method="POST">


                                    <div class="form row mx-auto">

                                        <div class="col-lg-8">
                                            <input type="hidden" class="form-control" name="id"
                                                value="<%- post!=undefined? post._id : '' %>" />


                                            <div class="form-group">
                                                <label class="control-label">Title <span
                                                        class="required">*</span></label>
                                                <input type="text" class="form-control" name="title"
                                                    value="<%- post!=undefined? post.title : '' %>" />

                                            </div>



                                            <div class="form-group">
                                                <label class="control-label">Cover Image <span
                                                        class="required">*</span></label>
                                                <div class="custom-file">
                                                    <input type="file" name="coverImg"
                                                        accept=".png, .jpeg , .jpg, .svg" value=""
                                                        class="custom-file-input" id="Multifileupload">
                                                    <label class="custom-file-label " for="customFile">Choose
                                                        file</label>

                                                </div>
                                            </div>
                                            <div id="MultidvPreview"></div>
                                            <% if(post!=undefined){ %>
                                                <img src="/uploads/<%- post!=undefined? post.coverImg : '' %>" alt=""
                                                    height="50" width="50">
                                                <% }%>

                                                    <div class="form-group">
                                                        <label class="control-label">Add multipe images <span
                                                                class="required">*</span></label>
                                                        <div class="custom-file">
                                                            <input type="file" name="images"
                                                                accept=".png, .jpeg , .jpg, .svg" 
                                                                class="custom-file-input"  multiple="multiple" id="images_file">
                                                            <label class="custom-file-label " for="customFile">Choose
                                                                file</label>

                                                        </div>
                                                        <span class="totalselect text-pink"></span><span class="filessize text-pink"></span>
                                                    </div>

                                                    <!-- <div class="row"> -->
                                                        <div class="form-group">
                                                            <div id="uploadPreview"></div>
                                                        </div>
                                                    <!-- </div> -->
                                        </div>



                                    </div>


                                    <div class="card-footer">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <button class="btn btn-primary pull-right">
                                                    <i class="fas fa-plus-circle"></i> save
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </form>

                            </div>


                        </div>


                    </div>

                </div>
            </div>
        </section>
    </div>





    <%- include('../common/footer.ejs') %>