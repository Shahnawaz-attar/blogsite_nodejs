

<%- include('./common/header.ejs') %>


		<section class="single">
			<div class="container">
				<div class="row">
					<div class="col-md-4 sidebar" id="sidebar">

			
						<aside>
							<div class="aside-body">
								<%- include('./newslatter') %>
							</div>
						</aside>
					</div>
					<div class="col-md-8">
						<!-- <ol class="breadcrumb">
						  <li><a href="javascript:void(0)">Home</a></li>
						  <li class="active">Film</li>
						</ol> -->
						<article class="article main-article">
							<header>
								<h1><%= post.title%></h1>
								<ul class="details">
									<li>Posted on <%= moment( post.created_at).format('MMMM Do YYYY') %></li>
									
									<li>By <a href="javascript:void(0)"><%= username%></a></li>
								</ul>
							</header>
							<div class="main">
								<p><%= post.description%></p>
								<div class="featured">
									<figure>
										<img src="/uploads/<%= post.coverImg%>">
										<figcaption>Image by pexels.com</figcaption>
									</figure>
								</div>

				
							</div>
			
						</article>
						<div class="sharing">
						<div class="title"><i class="ion-android-share-alt"></i> Sharing is caring</div>
							<ul class="social">
								<li>
									<a href="javascript:void(0)" class="facebook">
										<i class="ion-social-facebook"></i> Facebook
									</a>
								</li>
								<li>
									<a href="javascript:void(0)" class="twitter">
										<i class="ion-social-twitter"></i> Twitter
									</a>
								</li>
								<li>
									<a href="javascript:void(0)" class="googleplus">
										<i class="ion-social-googleplus"></i> Google+
									</a>
								</li>
								<li>
									<a href="javascript:void(0)" class="linkedin">
										<i class="ion-social-linkedin"></i> Linkedin
									</a>
								</li>
								<li>
									<a href="javascript:void(0)" class="skype">
										<i class="ion-ios-email-outline"></i> Email
									</a>
								</li>
								<li class="count">
									20
									<div>Shares</div>
								</li>
							</ul>
						</div>

					</div>
				</div>
			</div>
		</section>

        <%- include('./common/footer.ejs') %>

	