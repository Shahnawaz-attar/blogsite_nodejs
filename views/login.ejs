<%- include('./common/header.ejs') %>
    <section class="login first grey">
        <div class="container">
            <div class="box-wrapper">
                <div class="box box-border">
                    <div class="box-body">
                        <h4>Login</h4>

                        <div class="alert alert-warning alert-dismissible cust-error-show" hidden role="alert">
                            <strong>Holy guacamole!</strong> You should check in on some of those fields below.
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                          </div>


                        <form class="checklogin_form" action="/check_admin" method="POST" >
                            <div class="form-group">
                                <label>Email/Username</label>
                                <input type="text" name="username" class="form-control">
                                <span class="error"></span>
                            </div>
                            <div class="form-group">
                                <label class="fw">Password

                                </label>
                                <input type="password" name="password" class="form-control">
                                <span class="error"></span>
                            </div>
                            <div class="form-group text-right">
                                <button class="btn btn-primary btn-block">Login</button>
                            </div>
                            <div class="form-group text-center">
                                <span class="text-muted">Don't have an account?</span> <a href="/register">Create
                                    one</a>
                            </div>
                            <!-- <div class="title-line">
                                or
                            </div> -->
                            <!-- <a href="#" class="btn btn-social btn-block facebook"><i class="ion-social-facebook"></i>
                                Login with Facebook</a> -->
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('./common/footer.ejs') %>